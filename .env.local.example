# Local development environment variables (Next.js dev mode)
# Copy to `.env.local` and fill in credentials.

# Core
NODE_ENV=development

# NextAuth (JWT sessions)
# WARNING: Use a secure secret in production. Do not use `dev-secret`.
NEXTAUTH_SECRET=dev-secret
NEXTAUTH_URL=http://localhost:3000

# OAuth providers (optional; must be set together)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Rate limiting (KV-backed)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Analytics & logging
ANALYTICS_ENABLED=true
ANALYTICS_SINK=log
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true

# Database & cache
DATABASE_QUERY_TIMEOUT=5000
CACHE_DEFAULT_TTL=3600

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000

