# Cloudflare Pages local dev bindings (used by `wrangler pages dev`)
# Copy to `.dev.vars` for local Cloudflare dev server.

# Set a non-default secret for session security when possible
NEXTAUTH_SECRET=dev-secret

# Optional: Google OAuth (set both together)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Feature flags and tuning
ANALYTICS_ENABLED=true
ANALYTICS_SINK=log
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true
DATABASE_QUERY_TIMEOUT=5000
CACHE_DEFAULT_TTL=3600
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000

